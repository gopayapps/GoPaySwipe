<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:activity=".BankActivity">

	<ScrollView
		android:id="@+id/bank_details_form"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fillViewport="false">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:padding="@dimen/activity_horizontal_margin">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:src="@drawable/gopay_logo_transparent" />

			<LinearLayout
				android:id="@+id/cashoutInfo"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:backgroundTint="@color/colorAccent"
					android:gravity="center_horizontal"
					android:padding="10dp"
					android:text="@string/info_cashout"
					android:textAlignment="center"
					android:textColor="#254117"
					android:textSize="15dip"
					android:textStyle="bold" />

			</LinearLayout>

			<!--  Cashout Details -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center_horizontal"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:paddingBottom="15dp"
					android:text="@string/label_cashout_details"
					android:textSize="@dimen/title_heading_size"
					android:textStyle="bold" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:text="@string/label_account_type" />

				<Spinner
					android:id="@+id/spnChooseCashoutType"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

				<!--  Error message -->
				<TextView
					android:id="@+id/addDetailsError"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:textColor="#e30000"
					android:textStyle="bold" />

				<!--  Add Button -->
				<Button
					android:id="@+id/btnSkipCashout"
					style="@style/Widget.AppCompat.Button.Colored"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:backgroundTint="@color/colorPrimaryDark"
					android:text="Skip Adding Cashout Option"
					android:textStyle="bold" />

			</LinearLayout>

			<!--  Mobile Account Details -->
			<LinearLayout
				android:id="@+id/detailsMobileBank"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:visibility="invisible">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:gravity="center_horizontal"
					android:paddingBottom="5dp"
					android:text="Mobile Account Details"
					android:textSize="16dip"
					android:textStyle="bold" />

				<!--  Mobile Number TextField -->
				<EditText
					android:id="@+id/edtMobileCashoutNumber"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Mobile Number"
					android:inputType="number"
					android:maxLength="10"
					android:textSize="16sp" />

				<!--  Account Name TextField -->
				<EditText
					android:id="@+id/edtMobileCashoutName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Mobile Account Name (Optional)"
					android:inputType="number"
					android:maxLength="10"
					android:textSize="16sp" />

				<!--  Add Button -->
				<Button
					android:id="@+id/btnAddMobileCashout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					style="@style/Widget.AppCompat.Button.Colored"
					android:backgroundTint="@color/colorPrimaryDark"
					android:text="Add Mobile Bank Account"
					android:textAllCaps="false"
					android:textStyle="bold" />
			</LinearLayout>

			<!--  Bank Account Details -->
			<LinearLayout
				android:id="@+id/detailsBankAccount"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:visibility="invisible">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:gravity="center_horizontal"
					android:paddingBottom="5dp"
					android:text="Bank Account Details"
					android:textSize="16dip"
					android:textStyle="bold" />

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:text="Select Bank" />

				<Spinner
					android:id="@+id/spnChooseBank"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp" />

				<!--  Bank Account Number Label -->
				<EditText
					android:id="@+id/edtBankAccountName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Account Name"
					android:textSize="16sp" />

				<!--  Bank Account Number TextField -->
				<EditText
					android:id="@+id/edtBankAccountNumber"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Bank Account Number"
					android:inputType="number"
					android:textSize="16sp" />

				<!--  Msisdn TextField -->
				<EditText
					android:id="@+id/edtBankAccountPhone"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Phone Number"
					android:inputType="number"
					android:textSize="16sp" />

				<!--  Add Button -->
				<Button
					android:id="@+id/btnAddBankCashout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					style="@style/Widget.AppCompat.Button.Colored"
					android:backgroundTint="@color/colorPrimaryDark"
					android:text="Add Bank Account"
					android:textAllCaps="false"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</LinearLayout>

