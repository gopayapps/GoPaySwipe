<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".BankActivity">

	<ScrollView
		android:id="@+id/bank_details_form"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="false">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:padding="@dimen/activity_horizontal_margin" >

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:src="@drawable/gopay_logo_transparent"
				android:layout_gravity="center_horizontal"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"/>

			<LinearLayout
				android:id="@+id/cashoutInfo"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/cashout_info"
					android:textSize="15dip"
					android:textStyle="bold"
					android:gravity="center_horizontal"
					android:textColor="#254117"
					android:backgroundTint="@color/colorAccent"
					android:padding="10dp"/>

			</LinearLayout>

			<!--  Cashout Details -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical" >

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="5dp"
					android:text="@string/label_cashout_details"
					android:textStyle="bold"
					android:gravity="center_horizontal"
					android:textSize="@dimen/title_heading_size"/>

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/label_account_type"
					android:layout_marginBottom="5dp"/>

				<Spinner
					android:id="@+id/spnChooseCashoutType"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>

				<!--  Error message -->
				<TextView android:id="@+id/addDetailsError"
				          android:layout_width="fill_parent"
				          android:layout_height="wrap_content"
				          android:textColor="#e30000"
				          android:textStyle="bold"
				          android:padding="3dp"/>

				<!--  Add Button -->
				<Button
					android:id="@+id/btnSkipCashout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Skip Adding Cashout Option"
					android:textAllCaps="false"
					android:textStyle="bold" />

			</LinearLayout>

			<!--  Mobile Account Details -->
			<LinearLayout
				android:id="@+id/detailsMobileBank"
				android:visibility="invisible"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical" >

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="Mobile Account Details"
					android:textSize="16dip"
					android:textStyle="bold"
					android:gravity="center_horizontal"
					android:paddingBottom="5dp" />

				<!--  Bank Account Number TextField -->
				<EditText
					android:id="@+id/cashoutMobileNumber"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Mobile Number"
					android:numeric="integer"
					android:maxLength="10"/>

				<!--  Add Button -->
				<Button
					android:id="@+id/btnAddMobileCashout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Add Mobile Bank Account"
					android:textAllCaps="false"
					android:textStyle="bold" />
			</LinearLayout>

			<!--  Bank Account Details -->
			<LinearLayout
				android:id="@+id/detailsBankAccount"
				android:visibility="invisible"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical" >

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="Bank Account Details"
					android:textSize="16dip"
					android:textStyle="bold"
					android:gravity="center_horizontal"
					android:paddingBottom="5dp" />

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Select Bank"
					android:layout_marginBottom="5dp"/>

				<Spinner
					android:id="@+id/spnChooseBank"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"/>

				<!--  Bank Account Number Label -->
				<EditText
					android:id="@+id/registerBankAccountName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Account Name"/>

				<!--  Bank Account Number TextField -->
				<EditText
					android:id="@+id/registerBankAccountNumber"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Bank Account Number"
					android:numeric="integer"/>

				<!--  Msisdn TextField -->
				<EditText
					android:id="@+id/registerMsisdn"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="Phone Number"
					android:numeric="integer"/>

				<!--  Add Button -->
				<Button
					android:id="@+id/btnAddBankCashout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Add Bank Account"
					android:textAllCaps="false"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</LinearLayout>

